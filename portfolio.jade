section.contact.row
  .contact__body.container
    h3.contact__heading
      | Nie czekaj, skontaktuj się

    .contact__wrapper--left.col-md-6
      ul.contact__methods
        li.contact__item--telephone
          a(href="tel:+48739288022")
            | +48 739 288 022
        li.contact__item--email
          a(href="mailto:kontakt@codeme.eu")
            | kontakt[at]codeme.eu
        li.contact__item--facebook
          a(href="http://www.facebook.com/codemeeu/")
            | /codemeeu

    .contact__wrapper--right.col-md-6
      form.form(method="post", action="contact.php")
        input.form__field--name(type="text", name="user_name", placeholder="imię i nazwisko")
        input.form__field--email(type="email", name="user_email", placeholder="adres e-mail")
        input.form__field--subject(type="text", name="user_subject", placeholder="temat wiadomości")
        textarea.form__field--message(name="user_message" placeholder="treść wiadomości")
        input.form__button--submit(type="submit", value="Wyślij")
        
include footer.jade