mixin left-right(heading, icon, text, photo)
  article.service.row
    .service__description.col-xs-12.col-md-6
      .service__description--wrapper.text-right
        h4(class="service__description--header " + icon)
          | #{heading}
        p.services__description--text
          | #{text}
    .service__image.col-xs-12.col-md-6
      .service__image--container
        img.service__image--img(src="#{photo}", alt="#{heading}")
        
mixin right-left(heading, icon, text, photo)
  article.service.row
    .service__description.col-xs-12.col-md-6.col-md-push-6
      .service__description--wrapper
        h4(class="service__description--header " + icon)
          | #{heading}
        p.services__description--text
          | #{text}
    .service__image.col-xs-12.col-md-6.col-md-pull-6
      .service__image--container
        img.service__image--img(src="#{photo}", alt="#{heading}")
        
mixin portfolio-element(title, category)
  .project.col-xs-6.col-sm-4.col-lg-3
